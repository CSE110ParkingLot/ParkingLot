<?xml version="1.0" encoding="utf-8"?>

<!-- editTexts here are uneditable.  -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/parkitbg2">

    <!-- Name textfield, displays user's name   -->

    <TextView
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:background="#d9ffffff"
        android:autoText="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#631343"
        android:editable="false"/>

    <!-- Phone textfield, displays user's phone   -->

    <TextView
        android:layout_width="wrap_content"
        android:text="Phone"
        android:layout_height="wrap_content"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:background="#d9ffffff"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#631343"
        android:editable="false"/>

    <!-- Username textfield displays user's username  -->

    <TextView
        android:layout_width="wrap_content"
        android:text="Username"
        android:layout_height="wrap_content"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:background="#d9ffffff"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#631343"
        android:editable="false"/>

    <!-- Logout Button   -->

    <Button
        android:id="@+id/bLogout"
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#631343" />

</LinearLayout>